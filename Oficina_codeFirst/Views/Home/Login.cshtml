<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet"/>
    @section Scripts {
        @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")

        <script type="text/javascript">
            const apiUrl = "http://localhost:55330/";

            $(document).ready(() => {
                $("#form-login").submit(e => {
                    console.log('oi')
                    e.preventDefault();

                    $.ajax({
                        type: "POST",
                        url: apiUrl + "Autenticacao/AutenticarUsuario",
                        dataType: 'json',
                        async: false,
                        data: {
                            login: $("input[name$=txtLogin]").val(),
                            senha: $("input[name$=txtSenha]").val(),
                        },
                        success: (retorno) => {
                            console.log(retorno);
                        },
                    });
                });
            });
        </script>
    }
    <title>Login</title>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"> 
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Oficina - Login </a>
            </div>
        </div>
        <div class="container">
            <div class="container">
                <div>
                    <form id="form-login" name="form-login">
                        <p>
                            <label for="txtLogin">Login</label>&nbsp;
                            <input type="text" id="txtLogin" name="txtLogin" />
                        </p>
                        <p>
                            <label for="txtSenha">Senha</label>&nbsp;
                            <input type="password" id="txtSenha" name="txtSenha" />
                        </p>
                        <p>
                            <input class="btn btn-success" id="form-login" type="submit" value="Entrar" />
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    </script>
</body>
</html>